<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainweixin"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/beijing4"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:background="@drawable/title_bar_shang"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/locateText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="正在获取位置..."
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/img_tab_now"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/ws"
            android:scaleType="matrix" />
    </RelativeLayout>

    <Button
        android:id="@+id/img_search"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:background="@drawable/btn_dropdown_normal"
        android:paddingBottom="10dip"
        android:paddingTop="10dip"
        android:text="每 日 推 荐Top5         住哪篇" />

    <ScrollView
      
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_below="@id/img_search"
        android:scrollbarStyle="outsideOverlay" >

        <LinearLayout
            android:id="@+id/linearYX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/relar1"
                android:layout_width="315dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/itembg_one_n"
                android:clickable="false"
                android:gravity="center" >

                <ImageView
                    android:id="@+id/itemImage0"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_alignParentLeft="true"
                    android:src="@drawable/card_feed_b" />

                <TextView
                    android:id="@+id/hotelname"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:layout_toRightOf="@id/itemImage0"
                    android:padding="9dp"
                    android:singleLine="true"
                    android:textColor="#C00"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tele"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/hotelname"
                    android:layout_toRightOf="@id/itemImage0"
                    android:paddingLeft="8dp"
                    android:textColor="#000"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/price0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/hotelname"
                    android:layout_marginRight="6dp"
                    android:textColor="#000"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/address"
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tele"
                    android:layout_marginTop="7dp"
                    android:layout_toRightOf="@id/itemImage0"
                    android:paddingBottom="8dp"
                    android:paddingLeft="8dp"
                    android:singleLine="true"
                    android:textColor="#000"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/hintText1"
                    android:layout_width="0dp"
                    android:layout_height="0dp" />
            </RelativeLayout>

